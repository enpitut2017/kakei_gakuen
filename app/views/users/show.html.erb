<div>
  <div class="col-sm-8 col-sm-offset-2" id="zandaka">

    <div>
      <h1>
        <strong>残高:</strong>
        <%= @rest %>円
      </h1>
      <div class="col-md-6 col-sm-12">
        <h2 id="user_name"><strong><%= @user.name %>さんの家計簿</strong></h2>
      </div>
      <div class="col-md-6 col-sm-12">
        <p>
          <strong>予算　　:</strong>
          <%= @budget %>円
        </p>
        <p>
          <strong>今月の出費　:</strong>
          <%= @lost%>円
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-sm-offset-1" id="recent">
    <h1 class="title"><strong>最近買ったもの</strong></h1>
    <% if @books.size != 0 then %>
    <table id="item_table">
      <thead>
        <tr>
          <th>日付</th>
          <th>件名</th>
          <th>金額</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.time.strftime("%Y年%m月%d日") %></td>
          <td><%= book.item %></td>
          <td><%= book.cost %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div>
    <% if @books.size != 0 then %>
    <strong><%= link_to 'もっと見る', books_path %></strong>
    <% end %>
    </div>
    <% else %>
    <p>未登録です</p>
    <% end %>
  </div>
  <div class="col-sm-6 col-sm-offset-1" id="chara">
    <div class="col-sm-3">
      <p>
        <strong>Level:</strong>
        <%= @user.level %>
      </p>
    </div>
    <div class="col-sm-3">
      <p>
        <strong>Exp:</strong>
        <%= @user.exp %>
      </p>
    </div>
    <div>
      <img id="chara-img" alt="charactor" src="<%= @img_path %>" />
    </div>
  </div>
</div>
<%= link_to new_book_url, id: "fab" do %>
<i class="glyphicon glyphicon-pencil"></i>
<% end %>
