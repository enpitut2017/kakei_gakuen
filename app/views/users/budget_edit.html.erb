<div class="row">
  <br>
  <div class="well col-md-6 col-md-offset-3">
      <%= form_for(@user, url: budget_update_user_path) do |form| %>

          <div class="field">
            <%= form.hidden_field :name, value: @user.name %>
          </div>

          <div class="field">
            <%= form.hidden_field :email, value: @user.email %>
          </div>

          <div class="field">
            <%= form.label '今月の予算' %>
            <%= form.number_field :budget, id: :user_budget, class: 'form-control' %>
          </div>

          <div class="field">
              <%= form.label :password, "パスワード" %>
            <%= form.password_field :password, id: :user_password, class: 'form-control' %>
          </div>

          <div class="field">
              <%= form.label :password_confirmation, "再確認用パスワード" %>
            <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>

          <div class="actions text-center"><br>
          <%= form.submit '登録', class: 'btn btn-primary' %>
        </div>

      <%end%>
 </div>
